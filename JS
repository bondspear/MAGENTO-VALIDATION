define([
    'jquery',
    'jquery/ui',
    'jquery/validate',
    'mage/translate',
], function($){
    'use strict';
    return function(param) {
        $.validator.addMethod(
            "customvalidationrule",
            function(value) {
                $.ajax({
                    url: param.url,
                    data: {value:value},
                    type: 'post',
                    dataType: 'json',
                    success: function (ajax) {
                        localStorage.setItem("customvalidationrule",ajax.result);
                    }
                });
                return getFromStorage();
            },
            $.mage.__("Your validation message.")
        );
    };



    function getFromStorage(){
        let result = localStorage.getItem("customvalidationrule");
        localStorage.removeItem("customvalidationrule");
        return JSON.parse(result);
    }
});
